<Layout>
  <!--hero section -->
  <section>
    <!-- Header/Navbar -->
    <div class="flex  md:flex-nowrap justify-between items-center py-6 md:px-0">
      <div class="mb-4 md:mb-0">
        <svg class="vector" width="56" height="23" viewBox="0 0 56 23" fill="none" xmlns="http://www.w3.org/2000/svg">
